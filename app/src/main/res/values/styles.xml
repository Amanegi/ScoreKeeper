<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mStyleButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/btnColor</item>
        <item name="android:background">@drawable/btn_shape</item>
    </style>

    <style name="mPlusButton" parent="mStyleButton">
        <item name="android:text">+</item>
    </style>

    <style name="mMinusButton" parent="mStyleButton">
        <item name="android:text">-</item>
    </style>

    <style name="mTextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:text">0</item>
    </style>

</resources>
